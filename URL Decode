#!/usr/bin/env php
<?php

/*
 * IN: URL encoded string
 * OUT: URL decoded string
 */

$in='';
while (!feof(STDIN))
{
    $res = fread(STDIN, 1024);
    if (false === $res)
    {
    	fwrite(STDERR, "error reading from stdin");
	    exit(3);
	}
    $in .= $res;
}
$result=urldecode($in);
if (false===$result)
{
	fwrite(STDERR, "urldecode failed");
	exit(3);
}

fwrite(STDOUT, $result);

exit(0);
